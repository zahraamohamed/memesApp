<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MemeApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>





    <!-- progress -->
    <style name="progress_bar_style" parent="Widget.AppCompat.ProgressBar">

        <item name="android:indeterminateTint">@color/red</item>
        <item name="android:progressBackgroundTint">@color/red</item>
        <item name="android:progressBackgroundTintMode">@color/red</item>
        <item name="android:progressTint">@color/red</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>


    </style>


    <!-- image error -->
    <style name="image_error_style" parent="">

    <item name="android:indeterminateTint">@color/red</item>
    <item name="android:progressBackgroundTint">@color/red</item>
    <item name="android:progressBackgroundTintMode">@color/red</item>
    <item name="android:src">@drawable/ic_baseline_error_outline_24</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    </style>

</resources>